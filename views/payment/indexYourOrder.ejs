<div class="container mt-4">
	<h3>Your Orders</h3>
	<table class='table'>
		<tr>
      <th>ID</th>
      <th>Date</th>
			<th>Banner Name</th>
      <th>Banner place</th>
      <th>Time</th>
      <th>Content Name</th>
      <th>content</th>
      <th>Price</th>
      <th></th>
    </tr>

    <% _.each(advertisements, (advertisement) => {
      let i = advertisement.id;
    %>
		  <tr data-id="<%= advertisement.id %>" data-model="advertisement">
        <td><%= advertisement.id %></td>
        <td><%= timeslots[i].date %></td>
        <td><%= banners[i].banner_name %></td>
        <td><%= banners[i].location_address %></td>
        <td><%= timeslots[i].time_from %> - <%= timeslots[i].time_to %></td>
        <td><%= advertisement.advertisement_title %></td>
        <td><button type="button" class="btn btn-primary" data-toggle="popover" title="Content Image" data-html="true" data-content="<img src='<%= advertisement.content %>' alt='Banner Image' height='300px' width='500px'>">Show</button></td>
        <td><%= timeslots[i].price %></td>
        <td><a href="#" class="btn btn-sm btn-warning">Edit</a></td>
      </tr>
		<% }) %>
    </table>
</div>

