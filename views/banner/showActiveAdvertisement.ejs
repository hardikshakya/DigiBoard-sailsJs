<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<style>
  .mySlides { display:none; }
</style>
<body>

  <div class="container">
    <div class="w3-container">
      <h3 class="text-center"><strong>Active Advertisement</strong></h3>
      <hr>
    </div>

    <div class="w3-content w3-display-container">
      <div class="w3-display-container mySlides">
        <img src="<%= advertisement.content %>" style="width:100%; height: 600px;" onerror="this.src='/images/noAd.jpg'">
        <div class="w3-display-bottomright w3-large w3-container w3-padding-16 w3-black">
          <%= advertisement.advertisement_description %>
        </div>
        <div class="w3-display-bottomleft w3-large w3-container w3-padding-16 w3-black">
          <%= advertisement.advertisement_title %>
        </div>
      </div>
    </div>
  </div>
</body>

<script>
  let slideIndex = 1;

  const showDivs = (n) => {
    const x = document.getElementsByClassName("mySlides");

    if (n > x.length) { slideIndex = 1; }

    if (n < 1) { slideIndex = x.length; }

    for ( let i = 0; i < x.length; i++ ) {
     x[i].style.display = "none";
    }
    x[slideIndex-1].style.display = "block";

  };

  showDivs(slideIndex);

</script>
